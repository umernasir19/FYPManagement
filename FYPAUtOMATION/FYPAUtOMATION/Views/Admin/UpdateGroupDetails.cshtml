@model FYPAUtOMATION.Models.StudentGroupViewModel

@{
    ViewBag.Title = "UpdateGroupDetails";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Group Details</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Group Details</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Group Details</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        <form id="annoucnementform" method="post">
                            <div class="row">
                                <div class="col-sm-12">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Group Name</label>
                                        @Html.EditorFor(model => model.Group_Name, new { htmlAttributes = new { @placeholder = "Title", @class = "form-control", @id = "txtboxempname" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Group_Name, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group"> 
                                        <label>Group Members Name</label>
                                         <ul class="list-group">
                                             <li class="list-group-item">@Model.Student1_Name</li>
                                             <li class="list-group-item">@Model.Student2_Name</li>
                                         </ul>
                                    </div>
                                </div>
                            </div>
                            @Html.HiddenFor(model => model.group_id, new { @id = "txtboxid" })
                        </form>
                        <div class="row">

                            <div class="col-sm-12">
                                <div class="form-group">
                                    <input type="button" id="btnsubmit" value="Add Details" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<script src="~/Dist/lib/jquery/jquery.min.js"></script>
<script type="text/javascript">
        $(document).ready(function () {


            $('#btnsubmit').click(function (e) {
                var form = $("#annoucnementform");
                $.ajax({
                    type: 'Post',
                    data: $(form).serialize(),
                    url: "/Admin/UpdateGroupDetails",
                    success: function (data) {
                        if (data.success) {
                            alert(data.msg);
                            location.reload();
                        }
                    }
                });

            });








        });



</script>

