
@{
    ViewBag.Title = "DashBoard";
}

<style>

.image-box {

  background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)) center center;
  background-size: cover;

  color: white;
  min-height: 85.3vh;
}

.centered {
  position: absolute;
  top: 27%;
  right: 80%;
  transform: translate(-3%, -50%);
font-size:30px;
}

</style>

<section class="content-header">
        <div class="">
            
            <div class="col-sm-12">
                <ol class="breadcrumb mt-3 float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">DashBoard</li>
                </ol>
            </div>
        </div>

<div class="image-box" style="background-image:url(/Dist/img/intro-carousel/my-carosel.jpg)">
  <h1 class="centered">Welcome @Session["UserName"]</h1>

<div class="col-md-12" style="text-align: -webkit-right;">
<div class="list-group" style="width:30%">
<div class="w3-container">
  <h1 style="padding:5px">Announcements</h1>
</div>
  <a href="#" class="list-group-item list-group-item-action flex-column align-items-start active">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">Announcement 1</h5>
      <small>7 minutes ago</small>
    </div>
    <p class="mb-1">Registration Succesfully Completed</p>
    <small>Click to view</small>
  </a>
  <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">Announcement 2</h5>
      <small class="text-muted">5 hours ago</small>
    </div>
    <p class="mb-1">Group Request Accepted.</p>
    <small class="text-muted">Click to view</small>
  </a>
  <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">Announcement 3</h5>
      <small class="text-muted">3 days ago</small>
    </div>
    <p class="mb-1">Advisor Assigned.</p>
    <small class="text-muted">Click to view</small>
  </a>
</div>

</div>
</div>





</section>

